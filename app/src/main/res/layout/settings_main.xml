<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settingLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto_bold"
        android:padding="20dp"
        android:text="@string/settings_language_menu"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_language_24" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/black" />
    <TextView
        android:id="@+id/settingAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:fontFamily="@font/roboto_bold"
        android:padding="20dp"
        android:text="@string/settings_about_menu"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_baseline_info_24" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.5"
        android:background="@color/black" />

</LinearLayout>